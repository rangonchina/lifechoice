<div class="container">
     <h2 class="my-5">Commnt</h2>
      <div class="border rounded py-1 px-4 text-center">
         <%= image_tag "#{params[:theme_id]}_new.jpg", size: '275x100',class: "col-xs-3" %>
      </div>
 
      <div class="row">
        <% @goals.each do |goal| %>
          <div class="col-md-6">
            <div class="col-12 p-3">
             <div style="border: solid 1px lightgray;border-radius:8px;">
              <div class="col text-bold" style="font-size: 1.4em;"><%= goal.user.name %></div>
              <div class="pl-3"><%=  goal.status %></div>
              <div class="mb-3 pl-3"><%= link_to goal.body, admin_goal_path(goal.id) %></div>
             </div>
            </div>
          </div>
        <% end %>
      </div>
  </div>
 </div>

 