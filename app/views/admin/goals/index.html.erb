<div class="container">
     <h2 class="my-5">Comment</h2>
     <div class="border rounded py-1 px-4 text-center">
       <%= image_tag "#{@theme.image_id}_new.jpg", size: '275x100',class: "col-xs-3" %>
     </div>
 
  <div>    
    <div class="row">
        <% @goals.each do |goal| %>
          <% goal.post_comments.each do |post_comment| %>
              <div class="col-6 p-3">
                <div style="border: solid 1px lightgray;border-radius:8px;">
                    <div class="col-12">
                     <div class="col text-bold" style="font-size: 1.4em;"><%= post_comment.user.name %></div>
                     <div class="col"><%= post_comment.created_at.strftime('%Y/%m/%d') %></div>
                   </div>
                   <div class="col-12">
                     <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit.</p>
                     <div class="d-flex justify-content-end">
                       <p><%= link_to "削除", goal_post_comment_path(post_comment.goal, post_comment), method: :delete, class:"btn btn-outline-secondary" %></p>
                     </div>
                   </div>
                </div>
              </div>
          <% end %>
        <% end %>
    </div>
  </div>
 </div>
 

 