<div class="container">
  
  <h1>編集画面</h1>
<!-- form_with部分 -->
<%= form_with model: @goal, url:goals_path do |f| %>
  <h4>タイトル</h4>
      <%= f.text_field :title %>
      <%= f.select :theme_id, Theme.all.map { |theme| [theme.name, theme.id] } %>
      
  <h4>本文</h4>
      <%= f.text_area :body %>
  	  <%= f.submit '投稿' %>
<% end %>

</div>